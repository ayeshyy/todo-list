<%- include("header") -%>

    <div class="box" id="heading">
        <h1> <%= kindOfList %> </h1>
    </div>

    <div class="box">
            <% newListItems.forEach(function(ele){ %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" onchange="this.form.submit()" name="check" value="<%= ele._id %>">
                        <p> <%= ele.name %> </p>  
                    </div>
                    <input type="hidden" name="listsName" value="<%= kindOfList %>">
                </form>
            <% }) %>
        
        <form class="item" action="/" method="post">
            <input type="text" name="listItem" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value= <%= kindOfList %> >+</button>
        </form>
    </div>

<%- include("footer") -%>
   
 